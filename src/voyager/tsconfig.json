{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"outDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	}
}
